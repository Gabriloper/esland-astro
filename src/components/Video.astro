---
import { getI18N } from "../i18n/";
import Button from "@components/Button.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale })!;
---

<div class="w-full relative h-screen lg:h-full md:aspect-video">
  <div
    class="absolute z-10 top-14 left-1/2 -translate-x-1/2 right-0 m-auto flex items-center flex-col w-full"
  >
    <section
      class="animate-fade-up flex justify-center items-center gap-8 flex-col aspect-[343/350] md:aspect-[343/160] 2xl:aspect-[343/260]"
    >
      <h1
        class="flex items-center gap-5 text-4xl md:text-6xl lg:gap-20 lg:text-8xl font-tomaso"
      >
        <span>E</span><span>S</span><span>L</span><span
          class="letter-logo"
          aria-label="A"></span><span>N</span><span>D</span>
      </h1>
      <p class="text-xl lg:text-2xl text-center text-pretty font-jura">
        PREMIOS A LA COMUNIDAD HISPANOHABLANTE DE STREAMING
      </p>
    </section>
    <Button
      class="animate-fade-up"
      url="https://www.youtube.com/watch?v=1YmpPrqKP-g"
    >
      {i18n.VIDEO_BUTTON}
    </Button>
  </div>
  <video
    class="w-full h-screen object-cover object-top animate-fade animate-duration-1000 animate-ease-in-out"
    src="/video.mp4"
    autoplay
    loop
    muted
    style="clip-path: polygon(0 0, 100% 0, 100% 75%, 50% 100%, 0 75%);"></video>
  <video
    class="absolute -bottom-48 blur-3xl -z-40"
    src="/video.mp4"
    autoplay
    loop
    muted></video>
</div>

<style>
  @font-face {
    font-family: "Tomaso";
    font-style: normal;
    font-weight: normal;
    font-display: swap;
    src: url("/fonts/tomaso.woff2") format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122,
      U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  @font-face {
    font-family: "Jura";
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url("/fonts/jura.woff2") format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122,
      U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  h1 .letter-logo {
    background: url("/logo.png") no-repeat;
    width: 50px;
    height: 46px;
    background-position: center;
    background-size: contain;
    scale: 1.2;
  }

  @media (width >= 768px) {
    h1 .letter-logo {
      width: 100px;
      height: 66px;
    }
  }

  @media (width >= 992px) {
    h1 .letter-logo {
      height: 96px;
    }
  }
</style>
