---
import Logo from "@components/Logo.astro";
import { getI18N } from "../i18n/";
import Button from "@components/Button.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale })!;
---

<header id="header-nav" class="fixed w-full z-50 top-0 px-6">
  <div
    class="grid [grid-template-columns:40px_repeat(2,1fr)] sm:grid-cols-3 max-w-7xl mx-auto py-1 items-center justify-between"
  >
    <a href="/" class="col-span-1">
      <Logo class="w-10 h-auto" />
    </a>
    <nav class="col-span-1 w-full flex gap-2 justify-end md:justify-center">
      <a class="hover:underline" href="/info">{i18n.HEADER_1}</a>
      <a class="hover:underline" href="/archivo">{i18n.HEADER_2}</a>
    </nav>
    <Button
      class="justify-self-end lg:text-base"
      url="https://www.youtube.com/watch?v=O43x26hiolw"
    >
      {i18n.HEADER_BUTTON}
    </Button>
  </div>
</header>
